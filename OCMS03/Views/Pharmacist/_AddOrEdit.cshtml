@model OCMS03.Models.ViewModels.PharmacistCreateFormViewModel

@{
    ViewData["Title"] = "AddEdit";
}

<div class="modal fade" id="addPopUp">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-light">
                <h5 class="modal-title text-white">Add Pharmacist</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="AddOrEdit" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="FirstName"  class="form-control-sm col-md-12" placeholder="First Name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="LastName" class="form-control-sm" placeholder="Last Name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Dob" class="control-label"></label>
                                <input asp-for="Dob" class="form-control-sm" placeholder="DOB" />
                                <span asp-validation-for="Dob" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Idnumber" class="form-control-sm" placeholder="ID No:" />
                                <span asp-validation-for="Idnumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div>
                                    <label asp-for="Gender"></label>
                                </div>
                                <div>
                                    <div class="form-check">
                                        <input type="radio" asp-for="Gender" class="form-check-input" value="Male" />Male
                                    </div>
                                    <div class="form-check">
                                        <input type="radio" asp-for="Gender" class="form-check-input" value="Female" />Female
                                    </div>
                                </div>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="EmailAddress" class="form-control-sm" placeholder="Email Address" />
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" class="form-control-sm" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="PhoneNumber" class="form-control-sm" placeholder="Phone Number" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DepartmentId" class="control-label"></label>
                                <select asp-for="DepartmentId" class="form-control-sm" asp-items="ViewBag.DepartmentId">
                                    <option value="">-- Select Department --</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input asp-for="AddressLine1" class="form-control-sm" placeholder="AddressLine 1" />
                                <span asp-validation-for="AddressLine1" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="AddressLine2" class="form-control-sm" placeholder="AddressLine 2" />
                                <span asp-validation-for="AddressLine2" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SuburbId" class="control-label"></label>
                                <select asp-for="SuburbId" class="form-control-sm" asp-items="ViewBag.SuburbId">
                                    <option value="">-- Select Suburb --</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input asp-for="PostalCode" class="form-control-sm" placeholder="Postal Code" />
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>
                            <hr>
                            <h5 class="text-center text-sm-center">Fill In Next Of Kin Details</h5>
                            <hr />
                            <div class="form-group">
                                <input asp-for="NextOfName" class="form-control-sm" placeholder="Next Of Kin Name" />
                                <span asp-validation-for="NextOfName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="NextOfKinSurname" class="form-control-sm" placeholder="Next Of Kin Surname" />
                                <span asp-validation-for="NextOfKinSurname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="NextOfKinNumber" class="form-control-sm" placeholder="Next Of Kin Number" />
                                <span asp-validation-for="NextOfKinNumber" class="text-danger"></span>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-save="modal">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

