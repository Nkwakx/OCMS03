@model OCMS03.Models.Content.City

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="modal fade" id="addPopUp">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-dark text-light">
                    <h5 class="modal-title text-white">Edit Clinic</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Edit" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="CityId" />
                                <div class="form-group">
                                    <label asp-for="CityName" class="control-label"></label>
                                    <input asp-for="CityName" class="form-control-sm col-md-12" />
                                    <span asp-validation-for="CityName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DistrictId" class="control-label"></label>
                                    <select asp-for="DistrictId" class="form-control-sm col-md-12" asp-items="ViewBag.DistrictId">
                                        <option value="">~~ Select District ~~</option>
                                    </select>
                                    <span asp-validation-for="DistrictId" class="text-danger"></span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-save="modal">Update</button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
