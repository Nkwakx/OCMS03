@model IEnumerable<OCMS03.Models.Content.City>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";
}
<div id="PlaceholderHere"></div>

<div class="card col-md-12">
    <div class="card-header">
    </div>
    <div class="card-body">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li>
                    <button type="button" class="btn btn-outline-success fa fa-plus-square" data-toggle="ajax-modal" data-target="#addPopUp" data-url="@Url.Action("Create")"> Add New</button>
                </li>
            </ol>
        </div>
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        City Name
                    </th>
                    <th>
                        District
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CityName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.District.DistrictName)
                        </td>
                        <td>
                            <button type="button" data-toggle="ajax-modal" data-target="#addPopUp" data-url="@Url.Action($"Edit/{item.CityId}")"><i class="fa fa-marker fa-lg" title="Edit"></i></button>|
                            <button type="button" data-toggle="ajax-modal" data-target="#addPopUp" data-url="@Url.Action($"Delete/{item.CityId}")"><i class="text-danger ml-1 fa fa-trash-alt fa-lg" title="Delete"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        City Name
                    </th>
                    <th>
                        District
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

