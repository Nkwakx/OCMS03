@model OCMS03.Models.Content.District

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <div class="modal fade" id="addPopUp">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-dark text-light">
                    <h5 class="modal-title text-white">Edit District</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="DistrictId" />
                                <div class="form-group">
                                    <label asp-for="DistrictName" class="control-label"></label>
                                    <input asp-for="DistrictName"class="form-control-sm col-md-12" />
                                    <span asp-validation-for="DistrictName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProvinceId" class="control-label"></label>
                                    <select asp-for="ProvinceId" class="form-control-sm col-md-12" asp-items="ViewBag.ProvinceId"></select>
                                    <span asp-validation-for="ProvinceId" class="text-danger"></span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-save="modal">Update</button>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
