@model OCMS03.Models.Content.Province


@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="AddOrEdit" asp-route-id="@Model.ProvinceId" onsubmit="return jQueryAjaxPost(this);">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <input type="hidden" asp-for="ProvinceId" class="form-control" />
                    <span asp-validation-for="ProvinceId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="ProvinceName" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="ProvinceName" class=" form-control" />
                        <span asp-validation-for="ProvinceName" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>               
  </div>
    <div class="modal-footer">
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>         
                
           
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
