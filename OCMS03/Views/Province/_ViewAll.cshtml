@model IEnumerable<OCMS03.Models.Content.Province>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>

    <div class="card col-md-12">
        <div class="card-header">
        </div>
        <div class="card-body">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <a onclick="showInPopup('@Url.Action("AddOrEdit","Province",null,Context.Request.Scheme)','Add New')" class="btn btn-outline-success"><i class="fa fa-plus-square"></i> Add New</a>
                    </li>
                </ol>
            </div>
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Province Name
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProvinceName)
                            </td>
                            <td>
                                <a onclick="showInPopup('@Url.Action("AddOrEdit","Province",new {id=item.ProvinceId},Context.Request.Scheme)','Update Province')" class="btn btn-info text-white"> <i class="fas fa-edit"></i></a>
                                <form asp-action="Delete" asp-route-id="@item.ProvinceId" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                    <input type="submit" value="Delete" class="fas fa-trash" />
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>
                            Province Name
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</body>
</html>

