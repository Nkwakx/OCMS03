@model IEnumerable<OCMS03.Models.Content.Doctor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";
}

<div id="PlaceholderHere"></div>

<div class="card col-md-12">
    <div class="card-header">
    </div>
    <div class="card-body">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li>
                    <button type="button" class="btn btn-outline-success fa fa-plus-square" data-toggle="ajax-modal" data-target="#addPopUp" data-url="@Url.Action("AddOrEdit")"> Add New</button>
                </li>
            </ol>
        </div>
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Email Address
                    </th>
                    <th>
                        Contact
                    </th>
                    <th>
                        Specialization
                    </th>
                    <th>
                        Hospital
                    </th>
                    <th>
                        Department
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Specialization)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hospital.HospitalName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                        </td>
                        <td>
                            <button type="button" data-toggle="ajax-modal" data-target="#addPopUp" data-url="@Url.Action($"AddOrEdit/{item.StaffNumber}")"><i class="fas fa-edit" title="Edit"></i></button>|
                            <button type="button" data-toggle="ajax-modal" data-target="#addPopUp" data-url="@Url.Action($"Delete/{item.StaffNumber}")"><i class="text-danger ml-1 fa fa-trash-alt fa-lg" title="Delete"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Email Address
                    </th>
                    <th>
                        Contact
                    </th>
                    <th>
                        Specialization
                    </th>
                    <th>
                        Hospital
                    </th>
                    <th>
                        Department
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/ListAll.js"></script>
}

